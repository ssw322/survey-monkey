<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ssw322.project.surveylemur.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Survey Lemur"
        android:textSize="32sp"
        android:id="@+id/titleText"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary">
    </TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="360dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/enterButton"
        android:hint="Enter a code to begin..."
        android:textSize="24sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a test or survey"
        android:width="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/enterButton"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_create_white_24"
        android:id="@+id/fab"
        android:layout_margin="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:backgroundTint="@color/colorAccent"/>

</RelativeLayout>
