<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ssw322.project.surveylemur">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity
            android:name=".edit.EditSurveyMultipleChoiceActivity"
            android:label="Multiple Choice"
            android:parentActivityName=".create.CreateSurveyActivity"/>
        <activity
            android:name=".edit.EditSurveyMultipleAnswerActivity"
            android:label="Multiple Answer"
            android:parentActivityName=".create.CreateSurveyActivity"/>
        <activity
            android:name=".edit.EditSurveyShortAnswerActivity"
            android:label="Short Answer"
            android:parentActivityName=".create.CreateSurveyActivity"/>
        <activity
            android:name=".edit.EditSurveyEssayActivity"
            android:label="Essay"
            android:parentActivityName=".create.CreateSurveyActivity"/>
        <activity
            android:name=".edit.EditTestShortAnswerActivity"
            android:label="Short Answer"
            android:parentActivityName=".create.CreateTestActivity" />
        <activity
            android:name=".edit.EditTestEssayActivity"
            android:label="Essay"
            android:parentActivityName=".create.CreateTestActivity" />
        <activity
            android:name=".edit.EditTestMultipleAnswerActivity"
            android:label="Multiple Answer"
            android:parentActivityName=".create.CreateTestActivity" />
        <activity
            android:name=".edit.EditTestMultipleChoiceActivity"
            android:label="Multiple Choice"
            android:parentActivityName=".create.CreateTestActivity" />
        <activity
            android:name=".create.CreateSurveyActivity"
            android:label="Create a Survey"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".create.CreateTestActivity"
            android:label="Create a Test"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ViewFormActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>